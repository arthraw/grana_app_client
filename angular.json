{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "analytics": false,
    "packageManager": "npm"
  },

  "projects": {
    "grana_app": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",

      "targets": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/grana_app/browser",
            "browser": "src/main.ts",
            "index": "src/index.html",
            "tsConfig": "tsconfig.app.json",
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              "src/styles.css"
            ]
          },
          "configurations": {
            "development": {
              "optimization": false,
              "sourceMap": true
            },
            "production": {
              "outputMode": "all",
              "optimization": true
            }
          },
          "defaultConfiguration": "development"
        },

        "server": {
          "builder": "@angular-devkit/build-angular:server",
          "options": {
            "outputPath": "dist/grana_app/server",
            "main": "src/server.ts",
            "tsConfig": "tsconfig.server.json"
          }
        },

        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "buildTarget": "grana_app:build"
          },
          "configurations": {
            "development": {
              "buildTarget": "grana_app:build:development"
            },
            "production": {
              "buildTarget": "grana_app:build:production"
            }
          },
          "defaultConfiguration": "development"
        },

        "serve-ssr": {
          "builder": "@angular-devkit/build-angular:ssr-dev-server",
          "options": {
            "browserTarget": "grana_app:build",
            "serverTarget": "grana_app:server"
          }
        }
      }
    }
  }
}
